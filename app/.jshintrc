{
    // Enforcing options
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "indent": 4,
    "latedef": "nofunc",
    "maxlen": 100,
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "single",
    "undef": true,
    "unused": true,

    // Relaxing options
    "globalstrict": true,

    // Environments
    "browser": true,
    "globals": {
        "angular": false,
        "FastClick": false
    }
}
