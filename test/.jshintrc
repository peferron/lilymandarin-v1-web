{
    // Enforcing options
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "indent": 4,
    "latedef": "nofunc",
    "maxlen": 100,
    "newcap": false,
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "single",
    "undef": true,
    "unused": true,

    // Relaxing options
    "globalstrict": true,

    // Environment
    "globals": {
        "beforeEach": false,
        "describe": false,
        "inject": false,
        "it": false,
        "module": false
    }
}
